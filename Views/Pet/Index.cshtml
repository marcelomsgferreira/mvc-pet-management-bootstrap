@model IEnumerable<pet_register_table.Models.Pet>

@{
    ViewData["Title"] = "Home Page";
}

<p>
    <a asp-action="Create" class="btn btn-success btn-g"><span>
            <i class="bi bi-file-earmark-plus"></i>
    </span>Create New</a>
</p>
<table class="table mt-4 rounded">
    <thead class="table-primary table-hover rounded">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsVaccinated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegisteredAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChangedAt)
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-dark">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Species)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Breed)
                </td>
                <td>
                    @item.DateOfBirth.ToString("dd/MM/yyyy")

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OwnerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsVaccinated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegisteredAt)
                </td>
                <td>
                    @((item.ChangedAt == null) ? "Not Changed" : item.ChangedAt.ToString())
                </td>
                <td style="white-space: nowrap;">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-eye-fill"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>